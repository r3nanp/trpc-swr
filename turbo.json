{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**"]
		},
		"lint": {},
		"test": {
			"dependsOn": ["^build"],
			"outputs": ["tap.txt"]
		},
		"test:e2e": {
			"dependsOn": ["^build", "^migrate:db"],
			"outputs": ["playwright-report/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true
		}
	}
}
